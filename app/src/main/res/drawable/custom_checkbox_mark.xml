<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the color for the checked state -->
    <item android:state_checked="true" android:color="#FFFFFF" /> <!-- White color for the checkmark when checked -->

    <!-- Set the color for the unchecked state -->
    <item android:state_checked="false" android:color="@android:color/transparent" /> <!-- Transparent when unchecked -->
</selector>

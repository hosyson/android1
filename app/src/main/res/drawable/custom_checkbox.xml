<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Background color for unchecked state (white) -->
            <size android:width="48dp" android:height="48dp" /> <!-- Size of the checkbox -->
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Border for unchecked state (light gray) -->
        </shape>
    </item>

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#2196F3" /> <!-- Background color for checked state (blue) -->
            <size android:width="48dp" android:height="48dp" /> <!-- Size of the checkbox -->
            <stroke
                android:width="2dp"
                android:color="#2196F3" /> <!-- Border for checked state (blue) -->
        </shape>
    </item>
</selector>
